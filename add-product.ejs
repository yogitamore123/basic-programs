<html>
    <head>
        <%-include('_bootstrap.ejs')%>
    </head>
    <body>
        <%-include('__header.ejs')%>
        <div class="container mt-4">
            <form action="/product/add-product" method="post">
                <div class="form-group">
                    <input name="subproduct_id" type="text" placeholder="Enter product id" class="form-control"/>
                </div>
                <div class="form-group">
                    <input name="subproduct_name" type="text" placeholder="Enter product name" class="form-control"/>
                </div>
                <div class="form-group">
                    <input name="id" type="text" placeholder="Enter product category" class="form-control"/>
                </div>
                <div class="form-group">
                    <input name="price" type="text" placeholder="Enter product price" class="form-control"/>
                </div>
                <div class="form-group">
                    <input name="image" type="text" placeholder="Enter product image" class="form-control"/>
                </div>
                <div class="form-group">
                  <button class="btn btn-success">ADD</button>
                </div>
            </form>
        </div>
    </body>
</html>