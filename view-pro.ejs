<%- include('__header.ejs') %>
<%- include('_bootstrap.ejs') %>

<div class="container">
  <div class="row flex  justify-content-start">
    <% for (let i = 0; i < Product.length; i++) { %>
      <div class="col-6 col-sm-3 col-md-2 mb-4" style="margin-right: 4rem;"> 
        <div class="card" style="width: 14rem;"> 
          <!-- Card image -->
          <img src="<%= Product[i].image %>" class="card-img-top" style="justify-content-center: 10%; display: flex; height: 100px;" alt="<%= Product[i].subproduct_name %>">
          
          <!-- Card body -->
          <div class="card-body">
            <h5 class="card-title"><%= Product[i].subproduct_name %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= Product[i].subproduct_id %></h6>
            <p class="card-text">Price: <%= Product[i].price %></p>
            <p class="card-text">ID: <%= Product[i].id %></p>
          </div>

          <!-- Optional card footer -->
          <div class="card-footer text-muted">
            <a href="/product/delete/<%= Product[i].subproduct_id %>" onclick="return confirm('Are you sure you want to delete this product?')" class="btn btn-danger btn-sm">Delete Product</a> <!-- Smaller delete button -->
            <a href="/product/edit/<%= Product[i].subproduct_id %>" class="btn btn-primary btn-sm">Edit</a> <!-- Smaller edit button -->
          </div>
          
        </div>
      </div>
    <% } %>
  </div>
</div>
